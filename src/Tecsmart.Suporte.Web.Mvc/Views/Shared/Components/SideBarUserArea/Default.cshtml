@using Tecsmart.Suporte.Web.Views.Shared.Components.SideBarUserArea
@model SideBarUserAreaViewModel

<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
        <img src="~/arquivos/usuarios/@Html.Raw(Model.GetCaminhoFoto())" class="img-circle elevation-2" alt="User Image">
    </div>
    <div class="info">
        <a class="d-block" href="javascript:void(0);">@Html.Raw(Model.GetUserName())</a>
    </div>
</div>
